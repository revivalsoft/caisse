{% extends 'base_commandes.html.twig' %}

{% block title %}Liste des Commandes
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1 class="mb-4">Liste des Commandes</h1>

		<!-- Filtrage -->
		<form method="get" class="row g-3 mb-4">
			<div class="col-md-4">
				<input type="date" name="date" class="form-control" value="{{ selected_date }}">
			</div>
			<div class="col-md-4">
				<select name="table" class="form-select">
					<option value="">Toutes les tables</option>
					{% for table in tables %}
						<option value="{{ table.id }}" {{ table.id == selected_table ? 'selected' : '' }}>
							Table
							{{ table.nom }}
						</option>
					{% endfor %}
				</select>
			</div>
			<div class="col-md-4">
				<button class="btn btn-primary">Filtrer</button>
				<a href="{{ path('app_commandes') }}" class="btn btn-secondary">Réinitialiser</a>
			</div>
		</form>

		<!-- Table des commandes -->
		<table class="table table-striped table-hover">
			<thead class="table-dark">
				<tr>
					<th>Table</th>
					<th>Date</th>
					<th>Produits</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for commande in pagination %}
					<tr>
						<td>{{ commande.table.nom }}</td>
						<td>{{ commande.date|date('d/m/Y H:i') }}</td>
						<td>
							{% for ligne in commande.lignes %}
								<span class="badge bg-info">
									{{ ligne.libelleProduit }}
									(x{{ ligne.quantite }})
								</span>
							{% endfor %}
						</td>
						<td>
							<a href="{{ path('app_commande_detail', {id: commande.id}) }}" class="btn btn-sm btn-primary">
								Détails
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4" class="text-center">Aucune commande trouvée.</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<!-- Pagination -->
		<div class="d-flex justify-content-center">
			{{ knp_pagination_render(pagination, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
		</div>
	</div>
{% endblock %}
