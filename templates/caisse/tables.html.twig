{% extends 'base.html.twig' %}

{% block body %}
	<div class="container mt-4">
		<h2>Choisir une table</h2>
		<div class="row row-cols-4 g-3 mt-3">
			{% for table in tables %}
				<div class="col">
					<a href="{{ path('caisse_table', {'id': table.id}) }}" class="btn btn-primary btn-lg w-100 text-center">
						Table
						{{ table.id }}
					</a>
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}
