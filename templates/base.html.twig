<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Caisse
			{% endblock %}
		</title>
		<meta
		name="viewport" content="width=device-width, initial-scale=1.0">

		<!-- Bootstrap CSS -->
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

		<!-- CSS personnalisé -->
		<link rel="stylesheet" href="{{ asset('css/caisse.css') }}">
	</head>
	<body>
		{% include 'partials/navbar.html.twig' %}
		<main class="py-4"> {% block body %}{% endblock %}
			</main>

			<!-- Bootstrap JS -->
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

			<script>
				window.CAISSE = window.CAISSE || {};
window.CAISSE.saveUrl = "{{ path('caisse_save') }}";
			</script>

			<script>
				window.RESTAURANT = {
nom: "{{ restaurant.nom|e('js') }}",
adresse: "{{ restaurant.adresse|e('js') }}",
telephone: "{{ restaurant.telephone|e('js') }}",
logo: "{{ '/uploads/logos/' ~ restaurant.logo|e('js') }}"
};
			</script>

			<script src="{{ asset('js/caisse.js') }}" defer></script>
		</body>
	</html>
